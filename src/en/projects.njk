---
layout: "base.njk"
title: PROJECTS
---

{% set collectionKey = locale ~ "_projects" %}
{% set items = collections[collectionKey] or collections.en_projects or [] %}


<div>
    <div class="mt-10 mb-10">
        {% include "projectshero.njk" %}
    </div>
    <div class="mt-10">
        {%- for projects in items | reverse -%}  
            {% set title = projects.data.title %}
            {% set location = projects.data.location %}
            {% set image = projects.data.image or "/photo2.jpg" %}
            {% set url = projects.url %} 
            {% set date = projects.date %} 
            {% include "projectscard.njk" %}  
        {%- endfor -%}
    </div>
</div>
