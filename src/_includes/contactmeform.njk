<section class="bg-black text-white  ">
  <div class="max-w-7xl mx-auto px-4 md:px-8">

    <!-- HEADLINE - centered -->
    <div class="text-center  max-w-3xl mx-auto mb-12">
      <h2 class="text-4xl md:text-5xl font-extrabold leading-tight tracking-tight">
        <span class="text-red-600 block">
          {{'contactform.title1' | i18n}}
        </span>
        <span class="text-white">
          {{'contactform.title2' | i18n}}
        </span>
      </h2>
    </div>

    <!-- GRID: Image (left) + Contact form (right) -->
    <div class="grid md:grid-cols-2 gap-12 items-start">
      
      <!-- LEFT: Image card + social -->
      <div class="mx-auto w-full max-w-sm text-center md:text-left">
        <div class="relative aspect-square w-full overflow-hidden rounded-2xl shadow-xl">
          <!-- Replace with your portrait -->
          <img src="/assets/landingpage/IMG_6900.jpg" alt="Deak David portrait" class="absolute inset-0 w-full h-full object-cover" />
          
          <!-- bottom gradient for readability -->
          <div class="absolute bottom-0 left-0 right-0 h-1/3 bg-gradient-to-t from-black via-black/40 to-transparent pointer-events-none"></div>

          <!-- ICONS bottom-right -->
          <div class="absolute bottom-2 right-2 flex gap-2 bg-black/50 rounded-full px-3 py-2">
            <!-- Instagram -->
            <a href="https://instagram.com/davideak_" target="_blank" rel="noopener noreferrer" class="text-white hover:text-neutral-300">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"
                class="w-6 h-6 hover:opacity-100 opacity-80 transition-opacity">
                <path d="M7.75 2C4.57 2 2 4.57 2 7.75v8.5C2 19.43 4.57 22 7.75 22h8.5C19.43 22 22 19.43 22 16.25v-8.5C22 4.57 19.43 2 16.25 2h-8.5zM12 7.5a4.5 4.5 0 1 1 0 9 4.5 4.5 0 0 1 0-9zm0 1.5a3 3 0 1 0 0 6 3 3 0 0 0 0-6zm4.75-.75a.75.75 0 1 1 0 1.5.75.75 0 0 1 0-1.5zM4.5 7.75C4.5 5.68 6.18 4 8.25 4h7.5c2.07 0 3.75 1.68 3.75 3.75v8.5c0 2.07-1.68 3.75-3.75 3.75h-7.5C6.18 20 4.5 18.32 4.5 16.25v-8.5z" />
              </svg>
            </a>

            <!-- LinkedIn -->
            <a href="https://www.linkedin.com/in/david-deak-b1a43437b/" target="_blank" rel="noopener noreferrer" class="text-white hover:text-neutral-300">
              <svg class="w-6 h-6 hover:opacity-100 opacity-80 transition-opacity" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.615 3H4.385A1.385 1.385 0 003 4.385v15.23A1.385 1.385 0 004.385 21h15.23A1.385 1.385 0 0021 19.615V4.385A1.385 1.385 0 0019.615 3zM8.654 17.25H6.308V9.462h2.346V17.25zM7.481 8.423a1.358 1.358 0 110-2.717 1.358 1.358 0 010 2.717zm10.769 8.827h-2.308v-3.654c0-.872-.018-1.994-1.215-1.994-1.216 0-1.402.951-1.402 1.932v3.716h-2.308V9.462h2.215v1.064h.03c.308-.584 1.061-1.2 2.184-1.2 2.337 0 2.768 1.54 2.768 3.543v4.381z"/>
              </svg>
            </a>
          </div>
        </div>

        <h3 class="mt-4 text-xl font-semibold">Deak David</h3>
        <p class="text-sm text-neutral-400">{{'aboutherosection.underpicture' | i18n}} </p>
      </div>

      <!-- RIGHT: Contact form -->
      <div class="w-full max-w-xl mx-auto">
        <form action="https://formspree.io/f/xwpgwnkr" method="POST" class="space-y-6">
          
          <div>
            <label for="name" class="block text-sm font-medium text-neutral-400 mb-2">{{'contactform.neve' | i18n}} </label>
            <input id="name" name="name" type="text" required
              class="w-full bg-neutral-900 border border-neutral-800 rounded-lg px-4 py-3 text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-red-600">
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-neutral-400 mb-2">{{'contactform.mailok' | i18n}}</label>
            <input id="email" name="email" type="email" required
              class="w-full bg-neutral-900 border border-neutral-800 rounded-lg px-4 py-3 text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-red-600">
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-neutral-400 mb-2">{{'contactform.uzenetek' | i18n}}</label>
            <textarea id="message" name="message" rows="6" required
              class="w-full bg-neutral-900 border border-neutral-800 rounded-lg px-4 py-3 text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-red-600 resize-none"></textarea>
          </div>

          <div class="flex flex-col items-center gap-4 text-center
                      md:flex-row md:items-center md:justify-between md:text-left">
            <button type="submit"
              class="inline-flex items-center justify-center bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-3 rounded-lg transition">
              {{'contactform.sendmessage' | i18n}}
            </button>

            <div class="text-sm text-neutral-500">
              {{'contactform.emailmeat' | i18n}} <a href="mailto:contact@daviddeak.com" class="text-white underline">contact@daviddeak.com</a>
            </div>
          </div>
        </form>
      </div>

    </div>
  </div>
</section>
