<script>
  const toggles = document.querySelectorAll('.accordion-toggle');
  toggles.forEach(toggle => {
    toggle.addEventListener('click', () => {
      const content = toggle.nextElementSibling;
      const inner = content.querySelector('div');
      const icon = toggle.querySelector('svg');

      const isOpen = content.style.maxHeight;

      document.querySelectorAll('.accordion-content').forEach(c => {
        c.style.maxHeight = null;
        c.querySelector('div').classList.remove('opacity-100', 'translate-y-0');
        c.querySelector('div').classList.add('opacity-0', 'translate-y-2');
      });
      document.querySelectorAll('.accordion-toggle svg').forEach(i => {
        i.classList.remove('rotate-180');
      });

      if (!isOpen) {
        content.style.maxHeight = inner.scrollHeight + 'px';
        inner.classList.remove('opacity-0', 'translate-y-2');
        inner.classList.add('opacity-100', 'translate-y-0');
        icon.classList.add('rotate-180');
      }
    });
  });
</script>

