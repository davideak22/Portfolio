---
title: BLOG
layout: "base.njk"
---

{% set locKey = (locale | lower) ~ "_blog" %}
{% set locItems = collections[locKey] or [] %}
{% set enItems = collections.en_blog or [] %}

<div class="">
  <!-- Hero Image -->
  <div class="flex items-center justify-center">
    <div class="lg:-mx-42 -mx-10 w-screen overflow-hidden brightness-50 z-0">
      <img src="/assets/blog/deakdavid-1428.jpg" alt="street photo" class="w-full md:h-[400px] h-[300px] object-cover" />
    </div>
    <div class="absolute text-8xl flex font-mont items-center justify-center z-10">
      BLOG
    </div>
  </div>

  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 mt-10 items-center justify-center">
    {%- for en in enItems | reverse -%}

      {% set chosen = en %}
      {%- for loc in locItems -%}
        {% if (loc.data.postId and en.data.postId and loc.data.postId == en.data.postId)
              or (loc.fileSlug == en.fileSlug) %}
          {% set chosen = loc %}
        {% endif %}
      {%- endfor -%}

      {% set title = chosen.data.title %}
      {% set description = chosen.data.description %}
      {% set image = chosen.data.image %}
      {% set url = chosen.url %}
      {% include "blogcard.njk" %}

    {%- endfor -%}
  </div>
</div>
