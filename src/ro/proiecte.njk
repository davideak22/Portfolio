---
layout: "base.njk"
title: PROIECTE
---

{% set locKey = (locale | lower) ~ "_projects" %}
{% set locItems = collections[locKey] or [] %}
{% set enItems = collections.en_projects or [] %}

<div>
  <div class="mt-10 mb-10">
    {% include "projectshero.njk" %}
  </div>

  <div class="mt-10">
    {%- for en in enItems | reverse -%}

      {# try to find matching localized project #}
      {% set chosen = en %}
      {%- for loc in locItems -%}
        {# match by projectId (recommended) OR by fileSlug #}
        {% if (loc.data.projectId and en.data.projectId and loc.data.projectId == en.data.projectId)
              or (loc.fileSlug == en.fileSlug) %}
          {% set chosen = loc %}
        {% endif %}
      {%- endfor -%}

      {% set title = chosen.data.title %}
      {% set location = chosen.data.location %}
      {% set image = chosen.data.image or "/photo2.jpg" %}
      {% set url = chosen.url %}
      {% set date = chosen.date %}
      {% include "projectscard.njk" %}

    {%- endfor -%}
  </div>
</div>
